<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="inputLayout_normal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="inputLayout_light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorHint">@color/darkBlue</item>
        <item name="boxStrokeColor">@color/darkBlue</item>
        <item name="android:textColor">@color/darkBlue</item>

    </style>

    <style name="PopupToolbar" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:colorBackground">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_size_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_size_20sp_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_20sp_color">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="text_size_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_size_16sp_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_16sp_color">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="title_dialog">
        <item name="android:background">@drawable/bottom_btn_pink</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="detail_dialog_text_1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="detail_dialog_text_2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="btn_Stroke" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:background">@drawable/btn_stroke</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>